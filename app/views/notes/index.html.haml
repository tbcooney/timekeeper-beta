.wrapper
  #sidebar-wrapper
    %ul.sidebar-nav
      %li= link_to 'Notes', notes_path, class: "sidebar-brand"
      %li= link_to 'Documents', documents_path, class: "sidebar-brand"
      %li= link_to 'Settings', edit_user_registration_path, class: "sidebar-brand"
.wrapper_with_padding
  #notes.clearfix
    .tab-name Notes
    %button= link_to "New Note", new_note_path
    %br/
    %br/
    - unless @notes.blank?
      - @notes.each do |note|
        %a{ href: (url_for [note])}
          .note
            %p.title= note.title
            %p.date= time_ago_in_words(note.created_at)
    - else
      %h2 Add a Note
      %p It appears you haven't created any notes yet... Lets fix that. Why don't you go ahead and create a new note.
      %button= link_to "New Note", new_note_path

